        <div class="pt-32 ml-24 ">
          <h3 class="fluid-5-r mb-16">{{blog.data.title }} </h3>
          <h3 class="fluid-8-r"> {{blog.data.subtitle }}</h3>
          <p class=" mbr-64 ">{{blog.data.description }}</p>
