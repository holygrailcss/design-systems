


<li>
<a class="w-100" href="{{ blog.url }}"> 
  <div class="mb-24">
    <div class="row">
      <div class="col-xs-4"></div>
      <div class="col-xs-8 ">
        <div class="ml-24 article-loop"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <div class="rat-1-1 w-100 rad-12">
          <div class="rat-content">
            <img class="video-cover" width="100%" height="100%" src="{{blog.data.image }}"
